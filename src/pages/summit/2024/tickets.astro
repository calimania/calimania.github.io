---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Prices from '~/components/widgets/Pricing.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Tickets - Misión Comercial Calima - Brooklyn March 2024',
  image: '~/assets/images/brooklyn/calima-summit-brooklyn.png'
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <Hero image={{ src: '~/assets/images/brooklyn/calima-summit-brooklyn.png', alt: 'Mision Comercial Calima, Brooklyn, March 2024' }}>
    <Fragment slot="title">
       Misíon Comercial Calima<br/>
        <small class="font-semibold">Pónele ritmo a tu negocio.</small>
    </Fragment>
    <Fragment slot="subtitle">
        Club Ejecutivo Calima is connecting Pan American business leaders to create disruptive collaboration opportunities
    </Fragment>
  </Hero>

    <!-- Tickets Widget ******************* -->
    <a id="tickets"></a>
    <Prices
      title="Tickets"
      subtitle="Multiple opportunities for everyone to participate"
      prices={[
        {
          title: 'Comunidad',
          subtitle: 'Ron pal que quiera, Ron pa todo el mundo',
          price: 100,
          period: '2 days full of learning and neworking opportunities',
          items: [
            { description: 'Keynote, speakers and panels' },
            { description: 'Networking opportunities' },
            { description: 'After hours' },
            { description: 'scholarships available' },
          ],
          callToAction: {
            target: '_blank',
            text: 'Register Now',
            href: 'https://lu.ma/calimajc2024',
          },
        }
      ]}
    />
  <CallToAction
    title="Be a part of the future"
    subtitle="Register and receive updates about the event to your inbox"
    actions={[
      {
        variant: 'primary',
        text: 'Register in lu.ma',
        href: 'https://lu.ma/calimajc2024',
      },
    ]}
  />
</Layout>
