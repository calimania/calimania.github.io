import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Become a sponsor: Calima Summit - Brooklyn March 25 & 26, 2024',
  image: '~/assets/images/brooklyn/calima-summit-brooklyn-letters.png'
};
---
<Layout metadata={metadata}>
  <Hero image={{ src: '~/assets/images/brooklyn/calima-summit-brooklyn.png', alt: 'Mision Comercial Calima, Brooklyn, March 2024' }}>
    <Fragment slot="title">
       Calima Summit<br/>
        <small class="font-semibold">PÃ³nele ritmo a tu negocio.</small>
    </Fragment>
    <Fragment slot="subtitle">
      Club Calima is connecting Pan American business leaders to advance disruptive collaboration opportunities
    </Fragment>
  </Hero>
  <!-- Features3 Widget ************** -->
  <!-- LOGO AWS , COMMUNITY, CALIMA SUMMIT  -->
  <!-- Sponsor Widget ******************* -->
  <Content
    tagline="Community Partners"
    title="Thanks to our friends and supporters for making this happen"
    items={[
      {
        title: 'Calima',
        description: 'Community for latinx executives and business leaders',
      },
      {
        title: 'Innpulsa Colombia',
        description: 'Entrepreneurship and innovation agency of the National Government',
      },
      {
        title: 'Sikuani',
        description: 'Leading community to promote collaboration in the tech ecosystem'
      },
      {
        title: 'Negozee',
        description: 'Business community for spanish speakers in the US'
      },
      {
        title: 'Hablo AI',
        description: '(habloai.com) Machine learning models in spanish'
      },
      {
        title: 'AWS for startups',
        description: 'Community by AWS to support founders using their platform'
      },
      {
        title: "SHPE NYC",
        description: 'Largest association dedicated to fostering Hispanic leadership in the STEM field'
      }
    ]}
    image={{
      src: '~/assets/images/brooklyn/brooklyn-summit-calima-sponsors.png',
      alt: 'Calima summit community partners',
    }}
