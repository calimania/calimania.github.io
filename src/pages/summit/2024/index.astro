import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Calima Summit - Brooklyn, March 25 - 26 2024',
  image: '~/assets/images/brooklyn/calima-summit-brooklyn-letters.png'
};
---

<Layout metadata={metadata}>
  <Hero image={{ src: '~/assets/images/brooklyn/calima-summit-brooklyn.png', alt: 'Mision Comercial Calima, Brooklyn, march 2024' }}>
    <Fragment slot="title">
       Calima Summit<br/>
        <small class="font-semibold">PÃ³nele ritmo a tu negocio.</small>
    </Fragment>
    <Fragment slot="subtitle">
        Club Ejecutivo Calima is connecting Colombian business owners and leaders with their US peers in a beautiful waterfront location.
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Participate in our business community"
    subtitle="Discover the world of Colombian magical realism and its manifestation in the business world."
    columns={2}
    items={[
      {
        title: '2 days of content',
        description: 'Panels, speakers, workshops and office hours ',
        icon: 'tabler:stairs',
      },
      {
        title: 'Networking opportunities',
        description: 'Multiple activities and activations',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Celebrate Colombian culture',
        description: 'Catering, music and performance from the community.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Unique opportunity',
        description: `Participants from a variety of industries.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Beautiful location',
        description: 'Waterfront views near transit options.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'Parternship opportunities',
        description: 'Sponsor, apply to be a speaker or volunteer.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <Content
  isReversed
  tagline="Bienvenido a Brooklyn"
  title="March 25 - 26, 2024"
  ></Content>


