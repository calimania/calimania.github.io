---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Team - Misión Comercial Calima - Brooklyn March 25 & 26, 2024',
  image: '~/assets/images/brooklyn/calima-summit-brooklyn.png'
};
---
<Layout metadata={metadata}>
  <Hero image={{ src: '~/assets/images/brooklyn/calima-summit-brooklyn.png', alt: 'Mision Comercial Calima, Brooklyn, March  2024' }}>
    <Fragment slot="title">
       Misíon Comercial Calima<br/>
        <small class="font-semibold">Team</small>
    </Fragment>
    <Fragment slot="subtitle">
      Club Calima is connecting Pan American business leaders to advance disruptive collaboration opportunities
        <br/>
        Meet the people behind the event
    </Fragment>
  </Hero>

  <Testimonials
  title="Organizers, partners and sponsors"
  testimonials={[
    {
      testimonial: `I feel honored to be a part of this historic event with the potential to transform the perception of Colombians as business owners`,
      name: 'Daveed Silva',
      job: 'CTO - AWSM',
      image: {
        src: '~/assets/images/brooklyn/team-daveed.jpg',
        alt: 'Daveed Silva image',
      },
    },
    {
      testimonial: `Excited to be sharing my work with such an execellent team of executives`,
      name: 'Mari',
      job: 'Visual artist',
      image: {
        src: '',
        alt: 'Mari image',
      },
    },
    {
      testimonial: ``,
      name: 'Elkin Garavito',
      job: 'Community Leader',
      image: {
        src: '',
        alt: 'Elkin image',
      },
    },
    {
      testimonial: ``,
      name: 'Gloria Ossa',
      job: 'Educator, lawyer, international business',
      image: {
        src: '',
        alt: 'Gloria image',
      },
    },
    {
      testimonial: ``,
      name: 'Rosita Isabel',
      job: 'Community Leader',
      image: {
        src: '',
        alt: 'Rosita image',
      },
    },
  ]}/>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Be a part of the future"
    subtitle="Register and receive updates about the event to your inbox"
    actions={[
      {
        variant: 'primary',
        text: 'Registare',
        href: 'https://lu.ma/calimajc2024',
      },
    ]}
  />
</Layout>
