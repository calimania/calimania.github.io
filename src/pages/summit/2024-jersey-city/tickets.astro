---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Prices from '~/components/widgets/Pricing.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Tickets - Misión Comercial Calima - Jersey City March 2024',
  image: '~/assets/images/jc-1.png'
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <Hero image={{ src: '~/assets/images/jc-1.png', alt: 'Mision Comercial Calima, Jersey City, March 2024' }}>
    <Fragment slot="title">
       Misíon Comercial Calima<br/>
        <small class="font-semibold">Pónele ritmo a tu negocio.</small>
    </Fragment>
    <Fragment slot="subtitle">
        Club Ejecutivo Calima is connecting Colombian business owners and leaders with their US peers in a beautiful waterfront location.
    </Fragment>
  </Hero>

    <!-- Tickets Widget ******************* -->
    <a id="tickets"></a>
    <Prices
      title="Tickets"
      subtitle="Multiple opportunities for everyone to participate"
      prices={[
        {
          title: 'Comunidad',
          subtitle: 'Ron pal que quiera, Ron pa todo el mundo',
          price: 100,
          period: '2 days full of learning and neworking opportunities',
          items: [
            { description: 'Keynote, speakers and panels' },
            { description: 'Networking opportunities' },
            { description: 'After hours' },
            { description: 'scholarships available' },
          ],
          callToAction: {
            target: '_blank',
            text: 'Register Now',
            href: 'https://lu.ma/calimajc2024',
          },
        },
        {
          title: 'Ejecutivo',
          subtitle: 'Las industrias, muevan las industrias',
          price: 100,
          period: 'VIP reception and additional networking opportunities',
          items: [
            { description: 'Keynote speakers and panels' },
            { description: 'Networking opportunities' },
            { description: 'After hours' },
            { description: 'VIP reception' },
          ],
          callToAction: {
            target: '_blank',
            text: 'Preregister',
            href: 'https://lu.ma/calimajc2024',
          },
          hasRibbon: true,
          ribbonTitle: 'Buenisimo!',
        },
      ]}
    />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Be a part of the future"
    subtitle="Register and receive updates about the event to your inbox"
    actions={[
      {
        variant: 'primary',
        text: 'Register in lu.ma',
        href: 'https://lu.ma/calimajc2024',
      },
    ]}
  />
</Layout>
