---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Team - Misión Comercial Calima - Jersey City Feb 2024',
  image: '~/assets/images/jc-1.png'
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <Hero image={{ src: '~/assets/images/jc-1.png', alt: 'Mision Comercial Calima, Jersey City, feb 2024' }}>
    <Fragment slot="title">
       Misíon Comercial Calima<br/>
        <small class="font-semibold">Team.</small>
    </Fragment>
    <Fragment slot="subtitle">
        Club Ejecutivo Calima is connecting Colombian business owners and
        leaders with their US peers in a beautiful waterfront location.
        <br/>
        Meet the people behind the event
    </Fragment>
  </Hero>

  <Testimonials
  title="Organizers, partners and sponsors"
  testimonials={[
    {
      testimonial: `I feel honored to be a part of this historic event with the potential to transform the perception of Colombians as business owners`,
      name: 'Daveed Silva',
      job: 'CTO - AWSM',
      image: {
        src: '~/assets/images/jersey-city-2024/team-daveed.jpg',
        alt: 'Daveed Silva image',
      },
    },
    {
      testimonial: `Excited to be sharing my work with such an execellent team of executives`,
      name: 'Mari',
      job: 'Visual artist',
      image: {
        src: '',
        alt: 'Mari image',
      },
    },
  ]}/>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Be a part of the future"
    subtitle="Register and receive updates about the event to your inbox"
    actions={[
      {
        variant: 'primary',
        text: 'Save the date in lu.ma',
        href: 'https://lu.ma/calimajc2024',
      },
    ]}
  />
</Layout>
